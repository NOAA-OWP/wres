<?xml version="1.0" encoding="UTF-8"?>
<project label="ExampleProject" name="myIsolatedProject">
  <inputs>
    <left label="My Desired Name For Graphics">
      <type>observations</type>
      <source recursive="true" all="true" format="PI-XML">c:/resources/DRRC2SQIN.xml</source>
      <variable>QINE</variable>
    <features>
      <location lid="DRRC2" name="DOLORES - RICO, BLO"/>
    </features>
    </left>
    <right label="My Name I want to see on charts">
      <type>ensemble forecasts</type>
      <source format="PI-XML">c:/resources/forecasts/</source>
      <variable>SQIN</variable>
      <features>
        <location lid="DRRC2" name="DOLORES - RICO, BLO"/>
      </features>
      <timeAggregationDescription>
        <function>instantaneous</function>
        <period>1</period>
          <unit>HOUR</unit>
      </timeAggregationDescription>
    </right>
  </inputs>
  <conditions> <!-- aka filters -->
<!--    <dates earliest="1980-01-01T00:00" latest="2010-12-23T23:59"/>--> <!-- optional, default all -->
    <features>
        <location lid="DRRC2" name="DOLORES - RICO, BLO"/>
    </features>
  </conditions>
  <pair label="Pairs by location and lead time"> <!-- required for unit -->
    <unit>CMS</unit>
    <grouping>feature,lead_time</grouping><!-- optional? default feature,lead_time? -->
      <timeAggregationPrescription>
          <function>avg</function>
          <period>1</period>
          <unit>HOUR</unit>
      </timeAggregationPrescription>
  </pair>
  <outputs>
    <!-- destinations has one default: text, ., xml; even when nothing is here. Program chooses filenames for now -->
    <valueThresholds>
      <applyTo>left</applyTo>
      <commaSeparatedValues>10.0</commaSeparatedValues>
      <operator>greater than or equal to</operator>
    </valueThresholds>

<!--    <metric label="ME">
      <name>mean error</name>
    </metric>
    <metric label="">
      <name>correlation pearsons</name>
    </metric>-->
    <metric><name>reliability diagram</name></metric>
    <destination type="numeric"><path>testoutput/</path></destination>
    <!--<destination type="graphic"><path>/tmp/</path>
    <graphical width="192" height="108">
      <plotType>lead threshold</plotType>
      </graphical>
    </destination>-->
  </outputs>
</project>

