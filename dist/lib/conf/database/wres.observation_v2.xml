<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Add wres.Observation.scale_period" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="wres" tableName="observation" columnName="scale_period" />
            </not>
        </preConditions>
        <addColumn schemaName="wres" tableName="Observation">
            <column name="scale_period" type="Integer"
                    remarks="Measures the period over which values are formed"/>
        </addColumn>
        <comment>
            The column wres.Observation.scale_period has been created.
        </comment>
    </changeSet>
    <changeSet id="Add wres.Observation.scale_period Default" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT column_default IS NOT NULL AND column_default::int = 0
                FROM information_schema.columns
                WHERE (table_schema, table_name) = ('wres', 'observation')
                    AND column_name = 'scale_period';
            </sqlCheck>
        </preConditions>
        <addDefaultValue schemaName="wres" tableName="Observation" columnName="scale_period" defaultValue="1" />
    </changeSet>
    <changeSet id="Add wres.Observation.scale_function" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="wres" tableName="observation" columnName="scale_function" />
            </not>
        </preConditions>
        <addColumn schemaName="wres" tableName="Observation">
            <column name="scale_function" type="scale_function"
                    remarks="The function used to describe the scale of the data"/>
        </addColumn>
        <comment>
            The column wres.Observation.scale_function has been created.
        </comment>
    </changeSet>
    <changeSet id="Add wres.Observation.scale_function Default" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT column_default IS NOT NULL AND column_default::TEXT = 'UNKNOWN'
                FROM information_schema.columns
                WHERE (table_schema, table_name) = ('wres', 'observation')
                    AND column_name = 'scale_function';
            </sqlCheck>
        </preConditions>
        <addDefaultValue schemaName="wres" tableName="Observation" columnName="scale_function" defaultValue="UNKNOWN" />
    </changeSet>
</databaseChangeLog>