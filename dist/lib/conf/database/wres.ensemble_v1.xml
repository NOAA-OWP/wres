<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Ensemble v1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT EXISTS (
                    SELECT 1
                    FROM pg_catalog.pg_tables
                    WHERE schemaname = 'wres'
                        AND tablename = 'Ensemble'
                );
            </sqlCheck>
        </preConditions>
        <createTable tableName="Ensemble" schemaName="wres">
            <column name="ensemble_id" type="serial" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="ensemble_pk"/>
            </column>
            <column name="ensemble_name" type="text">
                <constraints nullable="false" />
            </column>
            <column name="qualifier_id" type="text" />
            <column name="ensemblemember_id" type="int" />
        </createTable>
        <sql>
            ALTER TABLE wres.Ensemble OWNER TO wres;
        </sql>
        <insert tableName="Ensemble" schemaName="wres">
            <column name="ensemble_name">default</column>
        </insert>
        <comment>
            The wres.Ensemble table has been added to the database.
        </comment>
    </changeSet>
</databaseChangeLog>