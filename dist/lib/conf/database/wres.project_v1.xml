<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Project1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT EXISTS (
                    SELECT 1
                    FROM pg_catalog.pg_tables
                    WHERE schemaname = 'wres'
                        AND tablename = 'Project'
                );
            </sqlCheck>
        </preConditions>
        <createTable tableName="Project" schemaName="wres">
            <column name="project_id" type="smallserial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="project_pk"/>
            </column>
            <column name="input_code" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="project_name" type="text">
            </column>
        </createTable>
        <sql>
            ALTER TABLE wres.Project OWNER TO wres;
        </sql>
        <comment>
            The wres.Project table has been created.
        </comment>
    </changeSet>
</databaseChangeLog>