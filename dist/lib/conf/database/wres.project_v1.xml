<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Project 1.1" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Project" schemaName="wres"/>
            </not>
        </preConditions>
        <createTable tableName="Project" schemaName="wres">
            <column name="project_id" type="smallint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="project_pk"/>
            </column>
            <column name="input_code" type="int" remarks="A unique identifier for all datasources linked to a project">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="project_name" type="varchar" remarks="A user provided identifier for a collection of data">
            </column>
        </createTable>
        <addAutoIncrement schemaName="wres" tableName="Project" columnName="project_id" />
        <sql>
            ALTER TABLE wres.Project OWNER TO wres;
        </sql>
        <comment>
            The wres.Project table has been created.
        </comment>
    </changeSet>
</databaseChangeLog>