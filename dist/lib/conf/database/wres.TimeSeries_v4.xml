<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
                   objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Create table wres.TimeSeries for most database systems."
               author="Christopher Tubbs, James Brown, Jesse Bickel">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="TimeSeries" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="TimeSeries" schemaName="wres">
            <column name="timeseries_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="timeseries_pk"/>
            </column>
            <column name="variablefeature_id" type="int"
                    remarks="The ID of the coupling between the Time Series' variable and location" >
                <constraints nullable="false" />
            </column>
            <column name="ensemble_id" type="int"
                    remarks="The ID of a time series' grouping identification" >
                <constraints nullable="false" />
            </column>
            <column name="measurementunit_id" type="smallint"
                    remarks="The ID of the unit of measurement used by the time series" >
                <constraints nullable="false" />
            </column>
            <column name="initialization_date" type="timestamp without time zone"
                    remarks="The date and time from which the time series' values are projected from." >
                <constraints nullable="false" />
            </column>
            <column name="scale_period" type="int"
                    remarks="The period of the temporal scale of the value in minutes. Instantaneous = 1.">
            </column>
            <column name="scale_function" type="varchar"
                    remarks="The function used to describe the scale of the collected data"
                    defaultValue="UNKNOWN">
                <constraints nullable="false" />
            </column>
            <column name="source_id" type="int">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="variablefeature_id"
                                 baseTableName="TimeSeries"
                                 baseTableSchemaName="wres"
                                 constraintName="timeseries_variablefeature_fk"
                                 referencedColumnNames="variablefeature_id"
                                 referencedTableName="VariableFeature"
                                 referencedTableSchemaName="wres"
                                 onDelete="CASCADE" />
        <addForeignKeyConstraint baseColumnNames="measurementunit_id"
                                 baseTableName="TimeSeries"
                                 baseTableSchemaName="wres"
                                 constraintName="timeseries_measurementunit_fk"
                                 referencedColumnNames="measurementunit_id"
                                 referencedTableName="MeasurementUnit"
                                 referencedTableSchemaName="wres"
                                 onDelete="CASCADE" />
        <addForeignKeyConstraint baseColumnNames="source_id"
                                 baseTableName="TimeSeries"
                                 baseTableSchemaName="wres"
                                 constraintName="timeseries_source_fk"
                                 referencedColumnNames="source_id"
                                 referencedTableName="Source"
                                 referencedTableSchemaName="wres"
                                 onDelete="CASCADE" />
        <createIndex tableName="TimeSeries" schemaName="wres" indexName="timeseries_variablefeature_ix">
            <column name="variablefeature_id" />
        </createIndex>
        <createIndex tableName="TimeSeries"
                     schemaName="wres"
                     indexName="timeseries_source_index">
            <column name="source_id" />
        </createIndex>
        <comment>
            The wres.TimeSeries table has been added to the database.
        </comment>
    </changeSet>
</databaseChangeLog>
