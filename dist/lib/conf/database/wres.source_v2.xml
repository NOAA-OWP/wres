<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="wres.Source - Remove path uniqueness" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="t">
                SELECT EXISTS (
                    SELECT 1
                    FROM INFORMATION_SCHEMA.table_constraints
                    WHERE table_schema = 'wres'
                        AND table_name = 'source'
                        AND constraint_name = 'source_path_key'
                        AND constraint_type = 'UNIQUE'
                );
            </sqlCheck>
        </preConditions>
        <dropUniqueConstraint tableName="Source" schemaName="wres" constraintName="source_path_key" />
    </changeSet>
</databaseChangeLog>