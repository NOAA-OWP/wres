<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="Rename Feature.RFC" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="Feature" schemaName="wres" />
            <columnExists tableName="Feature" columnName="rfc" schemaName="wres" />
        </preConditions>
        <renameColumn tableName="Feature" oldColumnName="rfc" newColumnName="region" schemaName="wres"/>
        <comment>Renamed 'Feature.rfc' to 'Feature.region'</comment>
    </changeSet>
    <changeSet id="Rename Feature.st" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="Feature" schemaName="wres" />
            <columnExists tableName="Feature" schemaName="wres" columnName="st" />
        </preConditions>
        <renameColumn tableName="Feature" schemaName="wres" oldColumnName="st" newColumnName="state" />
        <comment>Renamed 'Feature.st' to 'Feature.state'</comment>
    </changeSet>
    <changeSet id="Feature v1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Feature" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="Feature" schemaName="wres">
            <column name="feature_id" type="serial" autoIncrement="true">
                <constraints nullable="false" primaryKeyName="feature_pk" primaryKey="true" />
            </column>
            <column name="comid" type="int" remarks="NHDPlus Common Identifier"/>
            <column name="lid" type="text" remarks="Location ID" />
            <column name="gage_id" type="text" remarks="Unique ID for a gage" />
            <column name="region" type="text" remarks="The region that contains the feature" />
            <column name="state" type="text" remarks="The state which contains the feature" />
            <column name="huc" type="text" remarks="The Hydrologic Unit Code for the feature" />
            <column name="feature_name" type="text" remarks="The long form name for the feature" />
            <column name="latitude" type="real" remarks="The latitude of the feature" />
            <column name="longitude" type="real" remarks="The longitude of the feature" />
        </createTable>
        <sql>
            ALTER TABLE wres.Feature OWNER TO wres;
        </sql>
        <createIndex tableName="Feature" schemaName="wres" indexName="feature_lid_idx">
            <column name="lid" />
        </createIndex>
        <comment>
            The wres.Feature table has been created.
        </comment>
        <sqlFile relativeToChangelogFile="true" path="Features.sql" />
    </changeSet>
</databaseChangeLog>