<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="NetcdfCoordinate - add X" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <not>
                <columnExists tableName="NetcdfCoordinate" columnName="x" schemaName="wres" />
            </not>
        </preConditions>
        <addColumn tableName="NetcdfCoordinate" schemaName="wres">
            <column name="x" type="double precision"
                    remarks="The X value in the original projection" />
        </addColumn>
        <comment>wres.NetcdfCoordinate - the x column has been added.</comment>
    </changeSet>
    <changeSet id="NetcdfCoordinate - add Y" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <not>
                <columnExists tableName="NetcdfCoordinate" schemaName="wres" columnName="y" />
            </not>
        </preConditions>
        <addColumn tableName="NetcdfCoordinate" schemaName="wres">
            <column name="y" type="double precision" remarks="The Y value in the original projection"/>
        </addColumn>
        <comment>wres.NetcdfCoordinate - the y column has been added.</comment>
    </changeSet>
    <changeSet id="NetcdfCoordinate v1.1" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="NetcdfCoordinate" schemaName="wres">
            <column name="gridprojection_id" type="integer" remarks="The ID for the projection that this definition belongs to">
                <constraints nullable="false" deferrable="true" initiallyDeferred="true"/>
            </column>
            <column name="x_position" type="smallint" remarks="The x index for the value in the Netcdf file">
                <constraints nullable="false" />
            </column>
            <column name="y_position" type="smallint" remarks="The y index for the value in the NetCDF file">
                <constraints nullable="false" />
            </column>
            <column name="x" type="double precision" remarks="The X value in the original projection" >
                <constraints nullable="false" />
            </column>
            <column name="y" type="double precision" remarks="The Y value in the original projection" >
                <constraints nullable="false" />
            </column>
        </createTable>
        <comment>
            The wres.NetcdfCoordinate table (without geometry) has been added to the database.
        </comment>
    </changeSet>

    <changeSet id="Add geometry to wres.NetcdfCoordinate - POINT)"
               author="Jesse Bickel"
               dbms="postgresql,mariadb,mysql,mssql">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <not>
                <columnExists columnName="geographic_coordinate"
                              tableName="NetcdfCoordinate"
                              schemaName="wres" />
            </not>
        </preConditions>
        <addColumn tableName="NetcdfCoordinate"
                   schemaName="wres">
            <column name="geographic_coordinate"
                    type="POINT"
                    remarks="The geographic latitude and longitude point">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="Add geometry to wres.NetcdfCoordinate - GEOMETRY( POINT )"
               author="Jesse Bickel"
               dbms="h2">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <not>
                <columnExists columnName="geographic_coordinate"
                              tableName="NetcdfCoordinate"
                              schemaName="wres" />
            </not>
        </preConditions>
        <addColumn tableName="NetcdfCoordinate"
                   schemaName="wres">
            <column name="geographic_coordinate"
                    type="GEOMETRY( POINT )"
                    remarks="The geographic latitude and longitude point">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="Add index on NetcdfCoordinate.geographic_coordinate - gist"
               author="Jesse Bickel"
               dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <columnExists columnName="geographic_coordinate"
                          tableName="NetcdfCoordinate"
                          schemaName="wres" />
            <not>
                <indexExists indexName="Netcdfcoordinate_coordinate_idx"
                             columnNames="geographic_coordinate"
                             tableName="NetcdfCoordinate"
                             schemaName="wres" />
            </not>
        </preConditions>
        <comment>Manually creating the coordinate index in order to specify a GIS index</comment>
        <sql>
        CREATE INDEX IF NOT EXISTS Netcdfcoordinate_coordinate_idx
        ON wres.NetcdfCoordinate
        USING gist
        (geographic_coordinate);
        </sql>
    </changeSet>
</databaseChangeLog>
