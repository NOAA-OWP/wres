<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="GridProjection 1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT EXISTS (
                    SELECT 1
                    FROM pg_catalog.pg_tables
                    WHERE schemaname = 'wres'
                        AND tablename = 'gridprojection'
                );
            </sqlCheck>
        </preConditions>
        <createTable tableName="GridProjection" schemaName="wres">
            <column name="gridprojection_id" type="smallserial" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="gridprojection_pk"/>
            </column>
            <column name="proj4" type="text" >
                <constraints nullable="false" />
            </column>
            <column name="srtext" type="text" />
            <column name="projection_mapping" type="text" />
            <column name="x_resolution" type="double precision" />
            <column name="y_resolution" type="double precision" />
            <column name="x_unit" type="text" />
            <column name="y_unit" type="text" />
            <column name="x_type" type="text" />
            <column name="y_type" type="text" />
            <column name="x_size" type="int" />
            <column name="y_size" type="int" />
            <column name="load_complete" type="boolean" defaultValueBoolean="false" />
        </createTable>
        <sql>
            ALTER TABLE wres.GridProjection OWNER TO wres;
        </sql>
        <comment>
            The wres.GridProjection table has been created.
        </comment>
    </changeSet>
</databaseChangeLog>