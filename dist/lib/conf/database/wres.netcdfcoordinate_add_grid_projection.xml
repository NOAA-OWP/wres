<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="NetcdfCoordinate - add gridprojection_id" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="NetcdfCoordinate" schemaName="wres" />
            <not>
                <columnExists tableName="NetcdfCoordinate" columnName="gridprojection_id" schemaName="wres" />
            </not>
        </preConditions>
        <addColumn tableName="NetcdfCoordinate" schemaName="wres">
            <column name="gridprojection_id" type="int"
                    remarks="The ID of the coordinate's projection details" />
        </addColumn>
        <comment>wres.NetcdfCoordinate - the gridprojection_id column has been added.</comment>
    </changeSet>
</databaseChangeLog>