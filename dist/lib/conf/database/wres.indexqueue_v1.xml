<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="IndexQueue - Add to WRES v1.1" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="IndexQueue" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="IndexQueue" schemaName="wres">
            <column name="indexqueue_id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="indexqueue_pk" />
            </column>
            <column name="table_name" type="varchar" remarks="The name of the table that the index belongs to">
                <constraints nullable="false" />
            </column>
            <column name="index_name" type="varchar" remarks="The name of the index" >
                <constraints nullable="false" />
            </column>
            <column name="column_definition" type="varchar" remarks="The columns used for the index" >
                <constraints nullable="false" />
            </column>
            <column name="method" type="varchar" defaultValue="btree" remarks="The indexing method" />
        </createTable>
        <addAutoIncrement schemaName="wres" tableName="IndexQueue" columnName="indexqueue_id" />
        <sql>
            ALTER TABLE wres.IndexQueue OWNER TO wres;
        </sql>
        <comment>
            The wres.IndexQueue table has been created.
        </comment>
    </changeSet>
    <changeSet id="Migrate IndexQueue data to WRES" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableExists tableName="IndexQueue" schemaName="public" />
                <tableExists tableName="IndexQueue" schemaName="wres" />
            </and>
        </preConditions>
        <sql>
            INSERT INTO wres.IndexQueue (
                table_name,
                index_name,
                column_definition,
                method
            )
            SELECT table_name,
                index_name,
                column_definition,
                method
            FROM public.IndexQueue PIQ
            WHERE NOT EXISTS (
                SELECT 1
                FROM wres.IndexQueue WIQ
                WHERE WIQ.table_name = PIQ.table_name
                    AND WIQ.index_name = PIQ.index_name
            );
        </sql>
        <dropTable tableName="IndexQueue" schemaName="public" />
    </changeSet>
</databaseChangeLog>