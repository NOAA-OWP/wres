<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="TimeSeries - Rename VariablePosition" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="TimeSeries" schemaName="wres" />
            <columnExists tableName="TimeSeries" schemaName="wres" columnName="variableposition_id" />
        </preConditions>
        <renameColumn tableName="TimeSeries" schemaName="wres" oldColumnName="variableposition_id"
                      newColumnName="variablefeature_id" />
        <comment>TimeSeries - Renamed 'variableposition_id' 'variablefeature_id'</comment>
    </changeSet>
    <changeSet id="TimeSeries v1.1" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="TimeSeries" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="TimeSeries" schemaName="wres">
            <column name="timeseries_id" type="int">
                <constraints primaryKey="true" primaryKeyName="timeseries_pk"/>
            </column>
            <column name="variablefeature_id" type="int"
                    remarks="The ID of the coupling between the Time Series' variable and location" >
                <constraints nullable="false" />
            </column>
            <column name="ensemble_id" type="int" remarks="The ID of a time series' grouping identification" >
                <constraints nullable="false" />
            </column>
            <column name="measurementunit_id" type="smallint"
                    remarks="The ID of the unit of measurement used by the time series" >
                <constraints nullable="false" />
            </column>
            <column name="initialization_date" type="timestamp without time zone"
                    remarks="The date and time from which the time series' values are projected from." >
                <constraints nullable="false" />
            </column>
        </createTable>
        <addAutoIncrement schemaName="wres" tableName="TimeSeries" columnName="timeseries_id" />
        <sql>
            ALTER TABLE wres.TimeSeries OWNER TO wres;
        </sql>
        <addForeignKeyConstraint baseTableName="TimeSeries" baseTableSchemaName="wres"
                                 baseColumnNames="variablefeature_id"
                                 constraintName="timeseries_variablefeature_fk" referencedTableName="VariableFeature"
                                 referencedColumnNames="variablefeature_id" referencedTableSchemaName="wres"
                                 onDelete="CASCADE" initiallyDeferred="true" deferrable="true" />
        <addForeignKeyConstraint baseTableName="TimeSeries" baseTableSchemaName="wres"
                                 baseColumnNames="measurementunit_id" constraintName="timeseries_measurementunit_fk"
                                 referencedTableName="MeasurementUnit" referencedTableSchemaName="wres"
                                 referencedColumnNames="measurementunit_id" deferrable="true" initiallyDeferred="true"
                                 onDelete="CASCADE"/>
        <createIndex tableName="TimeSeries" schemaName="wres" indexName="timeseries_variablefeature_ix">
            <column name="variablefeature_id" />
        </createIndex>
        <comment>
            The wres.TimeSeries table has been added to the database.
        </comment>
    </changeSet>
</databaseChangeLog>