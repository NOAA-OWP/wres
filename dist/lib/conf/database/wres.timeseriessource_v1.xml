<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="TimeSeriesSource v1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="TimeSeriesSource" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="TimeSeriesSource" schemaName="wres">
            <column name="timeseries_id" type="integer" remarks="The ID of the time series that uses the connected source">
                <constraints nullable="false" deferrable="true" initiallyDeferred="true"/>
            </column>
            <column name="source_id" type="integer" remarks="The ID for the source of the data for the time series">
                <constraints nullable="false" deferrable="true" initiallyDeferred="true" />
            </column>
            <column name="lead" type="int"
                    remarks="The amount of temporal units away from the connected Time Series' initialization date that the file holds data for" />
        </createTable>
        <sql>
            ALTER TABLE wres.TimeSeriesSource OWNER TO wres;
        </sql>
        <addForeignKeyConstraint baseTableName="TimeSeriesSource" baseTableSchemaName="wres"
                                 baseColumnNames="timeseries_id" constraintName="timeseriessource_timeseries_fk"
                                 referencedTableSchemaName="wres" referencedTableName="TimeSeries"
                                 referencedColumnNames="timeseries_id" onDelete="CASCADE"
                                 deferrable="true" initiallyDeferred="true" />
        <addForeignKeyConstraint baseTableName="TimeSeriesSource" referencedTableSchemaName="wres"
                                 baseColumnNames="source_id" baseTableSchemaName="wres"
                                 constraintName="timeseriessource_source_fk" referencedTableName="Source"
                                 referencedColumnNames="source_id" onDelete="CASCADE"
                                 deferrable="true" initiallyDeferred="true" />
        <createIndex tableName="TimeSeriesSource" schemaName="wres" indexName="timeseries_source_idx" unique="true">
            <column name="timeseries_id" />
            <column name="source_id" />
        </createIndex>
        <comment>
            The wres.TimeSeriesSource table has been added to the database.
        </comment>
    </changeSet>
    <changeSet id="Migrate wres.ForecastSource to wres.TimeSeriesSource" author="Christopher Tubbs">
        <preConditions onFail="MARK_RAN">
            <and>
                <tableIsEmpty tableName="TimeSeriesSource" schemaName="wres" />
                <tableExists tableName="ForecastSource" schemaName="wres" />
            </and>
        </preConditions>
        <sql>
            INSERT INTO wres.TimeSeriesSource(timeseries_id, source_id, lead)
            SELECT FS.forecast_id, FS.source_id, S.lead
            FROM wres.ForecastSource FS
            INNER JOIN wres.Source S
                ON S.source_id = FS.source_id
            WHERE NOT EXISTS (
                SELECT 1
                FROM wres.TimeSeriesSource TSS
                WHERE TSS.timeseries_id = FS.forecast_id
                    AND TSS.source_id = FS.source_id
                    AND (
                        TSS.lead = S.lead
                        OR (
                            TSS.lead IS NULL
                            AND S.lead IS NULL
                        )
                    )
            );
        </sql>
        <comment>Data from wres.ForecastSource successfully migrated to wres.TimeSeriesSource</comment>
    </changeSet>
</databaseChangeLog>