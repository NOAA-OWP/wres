<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="MeasurementUnit1.0" author="Christopher Tubbs" dbms="PostgreSQL">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="f">
                SELECT EXISTS (
                    SELECT 1
                    FROM information_schema.tables
                    WHERE table_schema = 'wres'
                        AND table_name = 'MeasurementUnit'
                );
            </sqlCheck>
        </preConditions>
        <createTable tableName="MeasurementUnit" schemaName="wres">
            <column name="measurementunit_id" type="smallserial">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="unit_name" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>
            ALTER TABLE wres.MeasurementUnit OWNER TO wres;
        </sql>
        <insert tableName="MeasurementUnit" schemaName="wres">
            <column name="unit_name">NONE</column>
        </insert>
