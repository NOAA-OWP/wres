<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a test of verifying simulations against observations.  -->
<project label="ExampleProject">

    <inputs>
        <left label="">
            <type>observations</type>
            <source all="true" format="PI-XML" missingValue="-999.0" 
                recursive="true" timeZone="UTC" unit="" zoneOffset="0">../data/DOSC1_QIN.xml</source>
            <variable>QIN</variable>
            <features>
                <location lid="DOSC1" />
            </features>
        </left>
        <right label="HEFS">
            <type>simulations</type>
            <source all="false" format="PI-XML" missingValue="-999.0"
                recursive="false" timeZone="UTC" unit="" zoneOffset="0">../data/DOSC1_SQIN.xml</source>
            <variable>SQIN</variable>
            <features>
                <location lid="DOSC1" />
            </features>
        </right>
    </inputs>

    <conditions> <!--firstLead="1" lastLead="24">-->
        <features>
            <location lid="DOSC1" />
        </features>
    </conditions>

    <pair label="Pairs by location and lead time"> 
        <unit>CMS</unit>
        <grouping>feature,lead_time</grouping>
        <desiredTimeAggregation>
            <function>avg</function>
            <period>1</period>
            <unit>hour</unit>
        </desiredTimeAggregation>
    </pair>

    <outputs>
        <probabilityThresholds>
            <applyTo>left</applyTo>
            <commaSeparatedValues>0.1,0.25,0.5,0.75,0.9,0.95</commaSeparatedValues>
            <operator>greater than or equal to</operator>
        </probabilityThresholds>
        <metric> <name>mean error</name> </metric>
        <metric> <name>sample size</name> </metric>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output</path>
        </destination>
        <destination type="graphic">
            <path>output/</path>
            <graphical width="800" height="600">
                <plotType>lead threshold</plotType>
            </graphical>
        </destination>
    </outputs>

</project>

