<?xml version="1.0" encoding="UTF-8"?>
<project label="ExampleProject" name="scenario650">
    <inputs>
        <left label="NWM Analysis">
            <type>simulations</type>
            <source format="netCDF">../data/griddedExamples/land_ellicott_city/analysis_assim/</source>
            <variable>SNEQV</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>1</period>
                <unit>hours</unit>
            </existingTimeScale>
        </left>
        <right label="NWM Short Range">
            <type>single valued forecasts</type>
            <source format="netCDF">../data/griddedExamples/land_ellicott_city/short_range/</source>
            <variable>SNEQV</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>1</period>
                <unit>hours</unit>
            </existingTimeScale>
        </right>
    </inputs>
    <pair label="Pairs by location and lead time"> <!-- required for unit -->
        <unit>kg m-2</unit>
        <feature>
            <polygon>
                <point>
                    <latitude>50.45</latitude>
                    <longitude>-124.75</longitude>
                </point>
                <point>
                    <latitude>50.55</latitude>
                    <longitude>-124.75</longitude>
                </point>
                <point>
                    <latitude>50.55</latitude>
                    <longitude>-124.77</longitude>
                </point>
                <point>
                    <latitude>50.45</latitude>
                    <longitude>-124.77</longitude>
                </point>
            </polygon>
        </feature>
        <leadHours maximum="4" />
        <issuedDates earliest="2018-05-26T00:00:00Z" latest="2018-05-28T00:00:00Z"/>
        <issuedDatesPoolingWindow>
            <period>12</period>
            <unit>hours</unit>
        </issuedDatesPoolingWindow>
    </pair>
    <metrics>
        <metric> <name>mean error</name> </metric>
        <metric> <name>pearson correlation coefficient</name></metric>
        <metric> <name>sample size</name> </metric>
    </metrics>
    <outputs>
        <destination type="pairs" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
         <destination type="netcdf">
            <path>output/</path>
            <netcdf gridded="true" />
        </destination>

    </outputs>
</project>

