<?xml version="1.0" encoding="UTF-8"?>

<project label="ExampleProject" name="scenario012">

    <inputs>
        <left label="">
            <type>observations</type>
            <source format="PI-XML">../data/DRRC2QINE.xml</source>
            <variable>QINE</variable>
        </left>
        <right label="HEFS">
            <type>ensemble forecasts</type>
            <source format="PI-XML">../data/drrc2ForecastsOneMonth/</source>
            <variable>SQIN</variable>
            <ensemble name="HEFSENSPOST" member_id="2009" qualifier="SIM1" />
        </right>
    </inputs>

    <pair label="Pairs by location and lead time">
        <unit>CMS</unit>
        <feature locationId="DRRC2" />
        <leadHours minimum="1" maximum="5" />
        <issuedDates earliest="1985-06-01T12:00:00Z" latest="1985-06-07T12:00:00Z" />

        <desiredTimeScale>
            <function>avg</function>
            <period>4</period>
            <frequency>1</frequency>
            <unit>hours</unit>
        </desiredTimeScale>
        <issuedDatesPoolingWindow>
            <period>48</period>
            <frequency>24</frequency>
            <unit>hours</unit>
        </issuedDatesPoolingWindow>
    </pair>

    <metrics>
        <!--<metric>
            <name>root mean square error</name>
        </metric>
        <metric>
            <name>mean square error</name>
        </metric>
        <metric>
            <name>mean square error skill score</name>
        </metric>
        <metric>
            <name>sample size</name>
        </metric>-->
        <metric>
            <name>mean error</name>
        </metric>
    </metrics>
    <outputs>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
        <destination type="pairs" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
        <destination type="graphic">
            <path>output/</path>
            <graphical width="800" height="600">
                <plotType>pooling window</plotType>
            </graphical>
        </destination>
    </outputs>

</project>
