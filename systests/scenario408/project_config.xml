<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a test of real, baseline validation streamflows verified through WRES where the obs is 24-h
     and the forecasts are 6-h.  Time aggregation is needed. -->
<project label="Project Not Allowed" name="scenario405">

    <inputs>
        <left label="Observations">
            <type>observations</type>
            <source format="datacard" zoneOffset="CST" unit="CFS" locationId="GLOO2">../data/singleValuedEx_ABRFC_ARCFUL_OBS/GLOO2X.QINE.19951101.20170905.datacard</source>
            <source format="datacard" zoneOffset="CST" unit="CFS" locationId="ANTO2">../data/singleValuedEx_ABRFC_ARCFUL_OBS/ANTO2X.QINE.20071001.20170905.datacard</source>
            <source format="datacard" zoneOffset="CST" unit="CFS" locationId="ARCT2">../data/singleValuedEx_ABRFC_ARCFUL_OBS/ARCT2X.QINE.19951101.20170905.datacard</source>
            <source format="datacard" zoneOffset="CST" unit="CFS" locationId="BLUO2">../data/singleValuedEx_ABRFC_ARCFUL_OBS/BLUO2X.QINE.19951101.20170905.datacard</source>
            <variable>QINE</variable>
        </left>
        <right label="Operational Single-Valued Forecasts" >
            <type>single valued forecasts</type>
            <source format="PI-XML">../data/singleValuedEx_ABRFC_ARCFUL_QINE</source>
            <variable>QINE</variable>
        </right>
    </inputs>

    <pair label="Pairs by location and lead time"> 
        <unit>CMS</unit>
        <feature locationId="GLOO2" />
        <feature locationId="ANTO2" />
        <feature locationId="ARCT2" />
        <feature locationId="BLUO2" />
        <leadHours minimum="1" maximum="24" />

        <leadTimesPoolingWindow>
            <period>6</period>
            <unit>hours</unit>
        </leadTimesPoolingWindow>
    </pair>

    <metrics>
        <thresholds>
            <type>value</type>
            <applyTo>left</applyTo>
            <source missingValue = "-999" format = "csv">thresholds.csv</source>
            <operator>greater than or equal to</operator>
        </thresholds>
        <metric><name>mean error</name></metric>
        <metric><name>sample size</name></metric>
    </metrics>
    <outputs>
        <destination type="pairs" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
    </outputs>

</project>
