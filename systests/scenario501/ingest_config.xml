<?xml version="1.0" encoding="UTF-8"?>
<project name="scenario501">

    <inputs>
        <left>
            <type>observations</type>
            <source>../smalldata/DRRC2QINE_FAKE_19850430.xml</source>
            <variable>QINE</variable>
            <features><location locationId="DRRC2" /></features> 
        </left>
        <right>
            <type>observations</type>
            <source>../data/DOSC1QME.xml</source>
            <variable>QME</variable>
            <features><location locationId="DOSC1" /></features>
        </right>
    </inputs>

    <pair>
        <unit>CMS</unit>
        <feature locationId="DRRC2" />
