<?xml version="1.0" encoding="UTF-8"?>

<project label="ExampleProject">
    
    <inputs>
        <left label="">
            <type>observations</type>
            <source all="true" format="PI-XML" missingValue="-999.0" 
                recursive="true" timeZone="UTC" unit="" zoneOffset="0">../data/DRRC2QINE.xml</source>
            <variable>QINE</variable>
        </left>
        <right label="HEFS">
            <type>ensemble forecasts</type>
<!-- The bad path name triggers an immediate exit from WRES. -->
            <source all="false" format="PI-XML" missingValue="-999.0"
                recursive="false" timeZone="UTC" unit="" zoneOffset="0">/THIS BETTER NOT EXIST/</source>
            <variable>SQIN</variable>
        </right>
    </inputs>

    <pair label="Pairs by location and lead time"> <!-- required for unit -->
        <unit>CMS</unit>
        <feature lid="DRRC2" />
        <leadHours minimum="1" maximum="24" />
        <grouping>feature,lead_time</grouping><!-- optional? default feature,lead_time? -->
        <desiredTimeAggregation>
            <function>avg</function>
            <period>1</period>
            <unit>hour</unit>
        </desiredTimeAggregation>
    </pair>

    <outputs>
        <probabilityThresholds>
            <applyTo>left</applyTo>
            <commaSeparatedValues>0.1,0.25,0.5,0.75,0.9,0.95</commaSeparatedValues>
            <operator>greater than or equal to</operator>
        </probabilityThresholds>
        <metric> <name>mean error</name> </metric>
        <metric> <name>brier score</name> </metric>
        <metric> <name>reliability diagram</name> </metric>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output/</path>
        </destination>
        <destination type="graphic">
            <path>output</path>
            <graphical width="800" height="600">
                <plotType>lead threshold</plotType>
            </graphical>
        </destination>
    </outputs>

</project>
