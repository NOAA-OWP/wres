<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a test of real, baseline validation streamflows verified through WRES where the obs is 24-h
     and the forecasts are 6-h.  Time aggregation is needed. -->
<project label="ExampleProject" name="Single Valued Test">

    <inputs>
        <left label="Observations">
            <type>observations</type>
            <source format="datacard" timeZone="CST" unit="CFS" location="GLOO2">../data/singleValuedEx_ABRFC_ARCFUL_OBS/GLOO2X.QINE.19951101.20170905.datacard</source>
            <variable>QINE</variable>
            <features>
                <location lid="GLOO2"/>
            </features>
            <existingTimeAggregation>
                <function>avg</function>
                <period>1</period>
                <unit>instant</unit>
            </existingTimeAggregation>
        </left>
        <right label="Operational Single-Valued Forecasts" >
            <type>single valued forecasts</type>
            <source all="false" format="PI-XML" missingValue="-999.0"
                recursive="false" timeZone="UTC" unit="CMS" zoneOffset="0">../data/singleValuedEx_ABRFC_ARCFUL_QINE</source>
            <variable>QINE</variable>
            <features>
                <location lid="GLOO2"/>
            </features>
            <existingTimeAggregation>
                <function>avg</function>
                <period>1</period>
                <unit>instant</unit>
            </existingTimeAggregation>
        </right>
    </inputs>

    <conditions firstLead="1" lastLead="24">
        <features>
            <location lid="GLOO2" />
        </features>
    </conditions>

    <pair label="Pairs by location and lead time"> 
        <unit>CMS</unit>
        <grouping>feature,lead_time</grouping>       
        <desiredTimeAggregation>
            <function>avg</function>
            <period>6</period>
            <unit>hour</unit>
        </desiredTimeAggregation>
    </pair>

    <outputs>
        <probabilityThresholds>
            <applyTo>left</applyTo>
            <commaSeparatedValues>0.1,0.25,0.5,0.75,0.9,0.95</commaSeparatedValues>
            <operator>greater than or equal to</operator>
        </probabilityThresholds>
        <metric><name>mean error</name></metric>
        <metric><name>sample size</name></metric>
        <destination type="pairs" decimalFormat="0.000000">
            <path>output</path>
        </destination>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output</path>
        </destination>
        <!--
        <destination type="graphic">
            <path>output</path>
            <graphical width="800" height="600">
                <plotType>lead threshold</plotType>
            </graphical>
        </destination>
        -->
    </outputs>

</project>
