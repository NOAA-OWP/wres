<?xml version="1.0" encoding="UTF-8"?>

<project label="ExampleProject" name="scenario950">

    <inputs>
        <left label="USGS">
            <type>simulations</type>
            <source format="usgs"></source>
            <variable unit="ft3/s">streamflow</variable>
            <existingTimeScale>
                <function>none</function>
                <period>1</period>
                <unit>hours</unit>
            </existingTimeScale>
        </left>
        
        <right label="NWM Medium Range Ensemble">
            <type>ensemble forecasts</type>
            <source format="netCDF" pattern="**/*.nc">/wres_share/testing/data/sr1.perftest/medium_range.0hrsold.fctlen240hrs/</source>
            <source format="netCDF" pattern="**/*.nc">/wres_share/testing/data/sr1.perftest/medium_range.6hrsold.fctlen234hrs/</source>
            <variable>streamflow</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>3</period>
                <unit>hours</unit>
            </existingTimeScale>
        </right>

    </inputs>

    <pair label="Pairs by location and lead time">
        <unit>CMS</unit>
        <feature rfc="abrfc" />
        <leadHours minimum="1" maximum="234" /> 
        
        <!-- Without dates, the code crashed due to parsing a date.  Let's try it with dates.-->
        <dates earliest="2017-05-07T00:00:00Z" latest="2017-05-30T00:00:00Z" />

        <desiredTimeScale>
            <function>avg</function> 
            <period>3</period>
            <unit>hours</unit>
        </desiredTimeScale>
    </pair>

    <metrics>
        <metric> <name>mean error</name> </metric>
        <metric> <name>sample size</name> </metric>
    </metrics>

    <outputs>
        <destination type="pairs" decimalFormat="0.000000">
            <path>output</path>
        </destination>
        <destination type="numeric" decimalFormat="0.000000">
            <path>output</path>
        </destination>
    </outputs>
</project>
