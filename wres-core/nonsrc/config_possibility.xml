<?xml version="1.0" encoding="UTF-8"?>
<project label="ExampleProject">
  <inputs>
    <left label="My Desired Name For Graphics" type="observation">
      <type>observations</type>
      <source format="PI-XML">file:///media/sf_userprofile/code/hefs_data/testinput/sharedinput/</source>
      <source recursive="false" format="netCDF">https://my.observations.com/bar/some.nc</source>
      <variable>QINE</variable>
    </left>
    <right label="My Name I want to see on charts">
      <type>ensemble forecasts</type>
      <source recursive="false" format="PI-XML">file:///media/sf_userprofile/code/hefs_data/testinput/sharedinput/forecasts/1985010112_DRRC2_SQIN_case_gefs_climatology_export.xml</source>
      <source recursive="false">https://my.data.com/foo</source>
      <variable>SQIN</variable>
      <rollingTimeAggregation>
        <function>sum</function>
        <period>1</period>
          <unit>HOUR</unit>
      </rollingTimeAggregation>
    </right>
    <baseline>
      <type>simple forecasts</type>
    </baseline>
  </inputs>
  <conditions> <!-- aka filters -->
    <dates earliest="1980-01-01T00:00" latest="2010-12-23T23:59"/> <!-- optional, default all -->
    <feature>
        <location lid="DRRC2" name="DOLORES - RICO, BLO"/>
    </feature>
  </conditions>
  <pair label="Pairs by location and lead time"> <!-- required for unit -->
    <unit>CMS</unit>
    <grouping>feature,lead_time</grouping><!-- optional? default feature,lead_time? -->
      <timeAggregation>
          <period>1</period>
          <unit>HOUR</unit>
      </timeAggregation>
  </pair>
  <outputs>
    <!-- destinations has one default: text, ., xml; even when nothing is here. Program chooses filenames for now -->
    <metric label="ME">mean_error</metric>
    <metric>correlation_coefficient</metric>
    <metric>brier_skill_score</metric> <!-- has its own units -->
    <destination type="numeric">file:///home/jesse/text_output"</destination>
    <destination type="graphic">file:///home/jesse/graphics_output
    <!--Optional:-->
    <graphical width="1920" height="1080">
      <plotType>LEAD_THRESHOLD</plotType>
      <!--Optional:-->
      <config>
        <!--You may enter ANY elements at this point-->
        <AnyElement/>
      </config>
    </graphical>
    </destination>
  </outputs>
</project>

