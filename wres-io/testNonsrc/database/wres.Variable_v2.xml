<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="wres.Variable - Create the variable table in any dbms" author="James Brown">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Variable" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="Variable" schemaName="wres">
            <column name="variable_id" type="SMALLINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="variable_pk"/>
            </column>
            <column name="variable_name" type="VARCHAR" remarks="The name of the variable">
                <constraints nullable="false" deferrable="true" unique="true" />
            </column>
        </createTable>
        <createIndex tableName="Variable" schemaName="wres" indexName="variable_variable_name_idx">
            <column name="variable_name" />
        </createIndex>
        <comment>
            The wres.Variable table has been added to the database.
        </comment>
    </changeSet>
</databaseChangeLog>