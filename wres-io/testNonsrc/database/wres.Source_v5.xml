<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="wres.Source - Create source table for any dbms."
               author="Jesse Bickel">
        <preConditions>
            <not>
                <tableExists tableName="Source" schemaName="wres" />
            </not>
        </preConditions>
        <createTable tableName="Source" schemaName="wres">
            <column name="source_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="hash" type="BINARY(16)">
                <constraints unique="true" />
            </column>
            <column name="lead" type="INTEGER" />
            <column name="output_time" type="DATETIME" />
            <column name="is_point_data" type="BOOLEAN" />
            <column name="path" type="VARCHAR" />
        </createTable>
    </changeSet>
</databaseChangeLog>
