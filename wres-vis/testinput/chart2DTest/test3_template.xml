<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<chartDrawingParameters>

    <plotTitle>
        <text>@metricName@ for @primaryScenario@ predictions of @variableName@ at @locationName@@baselineText@</text>
    </plotTitle>
    
    <subPlot subPlotIndex="0">
        <leftRangeAxis>       
            <label>
                <text>@metricShortName@@outputUnitsText@</text>
            </label>
        </leftRangeAxis>
    </subPlot>
    
    <domainAxis>
        <label>
            <text>@domainAxisName@@inputUnitsText@</text>
        </label>
    </domainAxis>

    <datasourceDrawingParameters sourceIndex="0">
        <plotter>LineAndScatter</plotter>
        <subPlot>0</subPlot>
        <yAxis>left</yAxis>
        
        <!-- The colors defined through a palette.  For this test, four colors for four series. -->
		<lineColorPalette>
            <color alpha="255" blue="0" green="0" red="0"/>
			<color alpha="255" blue="255" green="0" red="0" />
            <color alpha="255" blue="51" green="204" red="51"/>
            <color alpha="255" blue="0" green="0" red="255"/>
		</lineColorPalette>
    </datasourceDrawingParameters>
    
</chartDrawingParameters>
