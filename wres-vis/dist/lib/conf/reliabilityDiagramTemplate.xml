<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<chartDrawingParameters>

	<plotTitle>
        <font family="Dialog" size="12" style="1"/>
		<text>Reliability Diagram for Various Event Thresholds (Upper) and Sample Counts (Lower)
@locationName@.@variableName@.@primaryScenario@ At Lead Hour @leadHour@
		</text>
	</plotTitle>

    <!-- Color the series of the first data source. -->
	<datasourceDrawingParameters sourceIndex="0">
		<plotter>LineAndScatter</plotter>
		<subPlot>0</subPlot>
		<yAxis>left</yAxis>

		<!-- The colors defined through a palette. For this test, four colors for 
			four series. -->
		<lineColorPalette>
			<color alpha="255" blue="0" green="0" red="0" />
			<color alpha="255" blue="255" green="0" red="0" />
			<color alpha="255" blue="51" green="204" red="51" />
			<color alpha="255" blue="0" green="0" red="255" />
		</lineColorPalette>
	</datasourceDrawingParameters>
	
	<!-- Color the series of the second data source to match and ensure the items do not show in the legend. -->
	<datasourceDrawingParameters sourceIndex="1">
		<plotter>LineAndScatter</plotter>
		<subPlot>1</subPlot>
		<yAxis>left</yAxis>

		<!-- The colors defined through a palette. For this test, four colors for 
			four series. -->
		<lineColorPalette>
			<color alpha="255" blue="0" green="0" red="0" />
			<color alpha="255" blue="255" green="0" red="0" />
			<color alpha="255" blue="51" green="204" red="51" />
			<color alpha="255" blue="0" green="0" red="255" />
		</lineColorPalette>

		<seriesDrawingParameters
			createdIndexOfSeriesToModify="-1">
			<nameInLegend></nameInLegend>
			<showInLegend>false</showInLegend>
		</seriesDrawingParameters>
	</datasourceDrawingParameters>

    <!-- The diagonal line series. -->
	<datasourceDrawingParameters sourceIndex="2">
		<plotter>LineAndScatter</plotter>
		<subPlot>0</subPlot>
		<yAxis>left</yAxis>
		<seriesDrawingParameters
			createdIndexOfSeriesToModify="-1">
            <lineColor alpha="255" blue="128" green="128" red="128"/>
			<nameInLegend>Perfect</nameInLegend>
			<showInLegend>true</showInLegend>
            <shape>none</shape>
            <lineWidth>2.0</lineWidth>
		</seriesDrawingParameters>
	</datasourceDrawingParameters>

    <!-- Fix the bounds to 0 and 1. -->
	<subPlot subPlotIndex="0" weight="3">
		<leftRangeAxis>
			<numericAxis>
				<lowerBound>0.0</lowerBound>
				<upperBound>1.0</upperBound>
				<autoRange>false</autoRange>
			</numericAxis>
		</leftRangeAxis>
	</subPlot>
	<subPlot subPlotIndex="1" weight="1" />

    <!-- Fix the bounds to 0 and 1. -->
	<domainAxis inverted="false" visible="true">
		<numericAxis>
			<lowerBound>0.0</lowerBound>
			<upperBound>1.0</upperBound>
			<autoRange>false</autoRange>
		</numericAxis>
	</domainAxis>
	
	<!-- Put the legend on the right hand side. -->
    <legend visible="true">
        <position>BOTTOM</position>
        <title>
            <font family="Dialog" size="12" style="1"/>
            <text>@legendTitle@@legendUnitsText@</text>
        </title>
        <borderLineWidth>0.0</borderLineWidth>
    </legend>

</chartDrawingParameters>
