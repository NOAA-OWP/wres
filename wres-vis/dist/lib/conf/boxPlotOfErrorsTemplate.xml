<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<chartDrawingParameters>

    <!-- One line plot title using arguments populated by chart factory. -->
    <plotTitle>
        <font family="Dialog" size="12" style="1"/>
        <text>@metricName@ of Ensemble Forecast Errors
@locationName@.@variableName@.@primaryScenario@ @diagramInstanceDescription@
Evaluation Period: @earliestDateToText(yyyy-MM-dd;GMT)@ - @latestDateToText(yyyy-MM-dd;GMT)@
        </text>
    </plotTitle>
    
    <!-- Shapes for all series. -->
    <datasourceDrawingParameters sourceIndex="0">
        <plotter>ScatterBoxWhisker</plotter>
        <seriesDrawingParameters
            createdIndexOfSeriesToModify="-1">
            <lineColor alpha="255" blue="0" green="0" red="255"/>
            <fillColor alpha="255" blue="0" green="255" red="0"/>
            <nameInLegend>Series</nameInLegend>
            <boxWidth>-1</boxWidth>
            <showInLegend>true</showInLegend>
            <includeInPlot>true</includeInPlot>
            <shape>none</shape>
            <shapeSize>1.0</shapeSize>
            <lineWidth>1.0</lineWidth>
            <shapeFilled>true</shapeFilled>
            <barWidth>0.9</barWidth>
        </seriesDrawingParameters>
    </datasourceDrawingParameters>
    
    <!-- Tick format specified to match domain. -->
    <subPlot subPlotIndex="0" weight="1">
        <leftRangeAxis visible="true">
            <numericAxis>
                <tickFormat>0.0</tickFormat>
            </numericAxis>
        </leftRangeAxis>
    </subPlot>

    <!-- Tick format specified to match range. -->
    <domainAxis>
            <numericAxis>
                <tickFormat>0.0</tickFormat>
            </numericAxis>
    </domainAxis>
    
    <!-- No legend. -->
    <legend visible="false"/>
    
    <!-- Single horizontal threshold at 0. -->
    <thresholdList>
        <threshold id="zeroLine" includeInAxisLimitsComputation="false" isZone="false" visible="true">
            <axis>LEFT</axis>
            <subPlot>0</subPlot>
            <numericalStartValue>0.0</numericalStartValue>
            <numbericalEndValue>0.0</numbericalEndValue>
            <label>
                <font family="Dialog" size="12" style="0"/>
                <color alpha="255" blue="0" green="0" red="0"/>
                <text></text>
            </label>
            <color alpha="255" blue="0" green="0" red="0"/>
            <lineWidth>1.0</lineWidth>
            <labelAnchor>auto</labelAnchor>
        </threshold>
    </thresholdList>
    
    <!-- Subtitle to display the probabilities. -->
    <subtitleList>
        <subtitle>
            <font family="Dialog" size="12" style="0"/>
            <color alpha="255" blue="0" green="0" red="0"/>
            <text>Probabilities: @probabilities@</text>
            <border>
                <lineWidths bottom="0.0" left="0.0" right="0.0" top="0.0"/>
                <color alpha="255" blue="0" green="0" red="0"/>
            </border>
            <horizontalAlignment>CENTER</horizontalAlignment>
            <textAlignment>CENTER</textAlignment>
            <textInsets bottom="0.0" left="0.0" right="0.0" top="0.0"/>
            <position>TOP</position>
        </subtitle>
    </subtitleList>

</chartDrawingParameters>
