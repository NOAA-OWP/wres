<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<chartDrawingParameters>

	<plotTitle>
		<text>@metricName@ for @primaryScenario@ predictions of @variableName@
			at @locationName@@baselineText@
		</text>
	</plotTitle>

	<datasourceDrawingParameters sourceIndex="0">
		<plotter>LineAndScatter</plotter>
		<subPlot>0</subPlot>
		<yAxis>left</yAxis>

		<!-- The colors defined through a palette. For this test, four colors for 
			four series. -->
		<lineColorPalette>
			<color alpha="255" blue="0" green="0" red="0" />
			<color alpha="255" blue="255" green="0" red="0" />
			<color alpha="255" blue="51" green="204" red="51" />
			<color alpha="255" blue="0" green="0" red="255" />
		</lineColorPalette>

		<!-- The only parameter to set for all series is the series name, which 
			must be empty. The XYChartDatasource will know this means to use the defaults 
			supplied by the data to plot. -->
		<seriesDrawingParameters
			createdIndexOfSeriesToModify="-1">
			<nameInLegend></nameInLegend>
		</seriesDrawingParameters>
	</datasourceDrawingParameters>

	<!-- Range axis must always include zero. -->
	<subPlot subPlotIndex="0">
		<leftRangeAxis>
			<numericAxis>
				<rangeIncludesZero>true</rangeIncludesZero>
			</numericAxis>
		</leftRangeAxis>
	</subPlot>

    <!-- Integer tick spacing for LEAD_THRESHOLD plots. -->
	<domainAxis>
		<numericAxis>
			<intOnlyTickSpacing>true</intOnlyTickSpacing>
		</numericAxis>
	</domainAxis>

	<!-- Horizontal line at zero, black with a stroke width of two. Because 
		there is not default, all parameters must be specified. I should change that 
		requirement in the future, because only the location, color, and thickness 
		matter in this case. -->
	<thresholdList>
		<threshold id="rangeZeroLine"
			includeInAxisLimitsComputation="true" isZone="false" visible="true">
			<axis>LEFT</axis>
			<subPlot>0</subPlot>
			<numericalStartValue>0.0</numericalStartValue>
			<numbericalEndValue>unbounded</numbericalEndValue>
			<label>
				<font family="Dialog" size="12" style="0" />
				<color alpha="255" blue="0" green="0" red="0" />
				<text></text>
			</label>
			<color alpha="255" blue="128" green="128" red="128" />
			<lineWidth>2.0</lineWidth>
			<labelAnchor>auto</labelAnchor>
		</threshold>
	</thresholdList>

	<!-- Put the legend on the right hand side. -->
	<legend visible="true">
		<position>BOTTOM</position>
		<title>
			<font family="Dialog" size="12" style="1" />
			<text>@legendTitle@@legendUnitsText@:</text>
		</title>
		<borderLineWidth>0.0</borderLineWidth>
	</legend>
</chartDrawingParameters>
