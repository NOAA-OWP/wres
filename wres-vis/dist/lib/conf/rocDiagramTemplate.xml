<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<chartDrawingParameters>

	<plotTitle>
        <font family="Dialog" size="12" style="1"/>
		<text>@metricName@ for@primaryScenario@@variableName@
at @locationName@ with Time Scale @timeScale@@diagramInstanceDescription@
@referenceTime@@dataPoolingWindow(yyyy-MM-dd'T'HH:mm:ss zz;GMT)@</text>
	</plotTitle>
	
	<!-- Shapes for all series. -->
	<datasourceDrawingParameters sourceIndex="0">
		<plotter>LineAndScatter</plotter>
	</datasourceDrawingParameters>

    <!-- The diagonal line series. -->
	<datasourceDrawingParameters sourceIndex="1">
		<plotter>LineAndScatter</plotter>
		<seriesDrawingParameters
			createdIndexOfSeriesToModify="-1">
            <lineColor alpha="255" blue="128" green="128" red="128"/>
			<nameInLegend>Perfect</nameInLegend>
			<showInLegend>true</showInLegend>
            <shape>none</shape>
            <lineWidth>2.0</lineWidth>
		</seriesDrawingParameters>
	</datasourceDrawingParameters>

    <!-- Fix the bounds to 0 and 1. -->
	<subPlot subPlotIndex="0">
		<leftRangeAxis>
			<numericAxis>
				<lowerBound>0.0</lowerBound>
				<upperBound>1.0</upperBound>
				<autoRange>false</autoRange>
			</numericAxis>
		</leftRangeAxis>
	</subPlot>

    <!-- Fix the bounds to 0 and 1. -->
	<domainAxis inverted="false" visible="true">
		<numericAxis>
			<lowerBound>0.0</lowerBound>
			<upperBound>1.0</upperBound>
			<autoRange>false</autoRange>
		</numericAxis>
	</domainAxis>
	
	<!-- Put the legend on the bottom with an appropriate title. -->
    <legend visible="true">
        <position>BOTTOM</position>
        <title>
            <font family="Dialog" size="12" style="1"/>
            <text>@legendTitle@@legendUnitsText@:</text>
        </title>
        <borderLineWidth>0.0</borderLineWidth>
    </legend>

    <!--  A subtitle is added so that the 1.00 on the far right of the 
          domain axis will be drawn correctly.  It is an empty subtitle
          intended to force the plot area to be a bit smaller, left to 
          right, and allow space for 1.00 to be drawn completely. -->
    <subtitleList>
        <subtitle>
            <font family="Dialog" size="12" style="0"/>
            <color alpha="255" blue="0" green="0" red="0"/>
            <text>
</text>  <!-- Empty! -->
            <border>
                <lineWidths bottom="0.0" left="0.0" right="0.0" top="0.0"/>
                <color alpha="255" blue="0" green="0" red="0"/>
            </border>
            <horizontalAlignment>CENTER</horizontalAlignment>
            <textAlignment>CENTER</textAlignment>
            <textInsets bottom="0.0" left="0.0" right="0.0" top="0.0"/>
            <position>RIGHT</position>  <!-- Positioned on the RIGHT! -->
        </subtitle>
    </subtitleList>
</chartDrawingParameters>
