<?xml version="1.0" encoding="UTF-8"?>

<project label="ExampleProject">

    <inputs>
        <left label="">
            <type>observations</type>
            <source format="PI-XML" missingValue="-999.0" unit=""></source>
            <variable>QINE</variable>
        </left>
        <right label="HEFS">
            <type>ensemble forecasts</type>
            <source format="PI-XML" missingValue="-999.0" unit=""></source>
            <variable>SQIN</variable>
        </right>
    </inputs>

    <pair label="Pairs by location and lead time"> <!-- required for unit -->
        <unit>CMS</unit>
        <feature locationId="DRRC2" />
        <leadHours minimum="1" maximum="24" />
        <desiredTimeScale>
            <function>avg</function>
            <period>1</period>
            <unit>hours</unit>
        </desiredTimeScale>
    </pair>
    <metrics>
         <timeSeriesMetric>
             <name>time to peak error</name>
        </timeSeriesMetric>
    </metrics>
    <outputs>
        <destination type="numeric" decimalFormat="0.000000">
            <path></path>
        </destination>
        <destination type="pairs" decimalFormat="0.000000">
            <path></path>
        </destination>
        <destination type="graphic">
            <path></path>
            <!--Optional: -->
            <graphical width="800" height="600">
                <plotType>threshold lead</plotType>
            </graphical>
        </destination>
    </outputs>

</project>
