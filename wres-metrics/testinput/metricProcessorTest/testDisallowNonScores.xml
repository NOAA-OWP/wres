<?xml version="1.0" encoding="UTF-8"?>
<project label="ExampleProject">
  <inputs>
    <left label="My Desired Name For Graphics" type="observation">
      <type>observations</type>
      <source recursive="true" all="true" format="PI-XML">/media/sf_userprofile/hefs_data/resources/DRRC2SQIN.xml</source>
      <source recursive="false" format="netCDF">https://my.observations.com/bar/some.nc</source>
      <variable>QINE</variable>
    </left>
    <right label="My Name I want to see on charts">
      <type>ensemble forecasts</type>
      <source format="PI-XML">/media/sf_userprofile/hefs_data/resources/forecasts/</source>
      <source recursive="false">https://my.data.com/foo</source>
      <variable>SQIN</variable>
    </right>
    <baseline>
      <type>simple forecasts</type>
    </baseline>
  </inputs>
  <conditions> <!-- aka filters -->
<!--    <dates earliest="1980-01-01T00:00" latest="2010-12-23T23:59"/>--> <!-- optional, default all -->
    <feature>
        <location lid="DRRC2" name="DOLORES - RICO, BLO"/>
    </feature>
  </conditions>
  <pair label="Pairs by location and lead time"> <!-- required for unit -->
    <unit>CMS</unit>
    <desiredTimeAggregation>
      <period>1</period>
      <unit>HOUR</unit>
    </desiredTimeAggregation>
    <issuedDatesPoolingWindow>
      <period>48</period>
      <frequency>24</frequency>
      <unit>hour</unit>
    </issuedDatesPoolingWindow>
  </pair>
  <metrics>
    <valueThresholds>
      <applyTo>left</applyTo>
      <commaSeparatedValues>0,5,10,15,20</commaSeparatedValues>
      <operator>greater than</operator>
    </valueThresholds>
    <metric><name>all valid</name></metric>
  </metrics>
  <outputs>
    <destination type="numeric">/home/jesse/text_output"</destination>
    <destination type="graphic"><path>/tmp/</path>
    <!--Optional:-->
    <graphical width="1920" height="1080">
      <plotType>LEAD_THRESHOLD</plotType>
      </graphical>
    </destination>
  </outputs>
</project>

