<?xml version="1.0" encoding="UTF-8"?>
<!-- This is a test of real, baseline validation streamflows verified through WRES where the obs is 24-h
     and the forecasts are 6-h.  Time aggregation is needed. -->
<project label="ExampleProject" name="scenario103">

    <inputs>
        <left label="">
            <type>observations</type>
            <source format="PI-XML" missingValue="-999.0"
                unit="">D:/Applications/WRES/Code/wres/systests/data/abrfcExample/LGNN5_QME.xml</source>
            <variable>QME</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>24</period>
                <unit>hours</unit>
            </existingTimeScale>
        </left>
        <right label="HEFS" >
            <type>ensemble forecasts</type>
            <source format="PI-XML" missingValue="-999.0"
                unit="">D:/Applications/WRES/Code/wres/systests/data/abrfcExample/LGNN5_hefs_flow_1yr.tgz</source>
            <variable>QINE</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>1</period>
                <unit>nanos</unit>
            </existingTimeScale>
        </right>
        <baseline label="ESP" >
            <type>ensemble forecasts</type>
            <source format="PI-XML" missingValue="-999.0"
                unit="">D:/Applications/WRES/Code/wres/systests/data/abrfcExample/LGNN5_hefs-mefp_flow_1yr.tgz</source>
            <variable>QINE</variable>
            <existingTimeScale>
                <function>avg</function>
                <period>1</period>
                <unit>nanos</unit>
            </existingTimeScale>
        </baseline>

    </inputs>

    <pair label="Pairs by location and lead time"> 
        <feature locationId="LGNN5" />
        <leadHours minimum="1" maximum="240" />

        <desiredTimeScale>
            <function>avg</function>
            <period>24</period>
            <unit>hours</unit>
        </desiredTimeScale>
    </pair>

    <metrics>
        <thresholds>
            <commaSeparatedValues>0.1,0.25,0.925</commaSeparatedValues>
        </thresholds>
        <metric><name>mean square error skill score</name></metric>
        <metric><name>brier skill score</name></metric>      
    </metrics>
    <metrics>
        <thresholds>
            <commaSeparatedValues>0.5,0.925</commaSeparatedValues>
        </thresholds> 
        <metric>
            <name>mean error</name>           
        </metric>
        <metric>
            <name>mean square error</name>           
        </metric>
        <metric> 
            <name>brier score</name>
        </metric>
    </metrics>
    <outputs>
        <destination type="numeric" decimalFormat="0.000000">
            <path>C:\Users\HSL\Desktop\WRES_TESTS\Ensemble_tests\scenario103\outputs/</path>
        </destination>
        <destination type="pairs" decimalFormat="0.000000">
            <path>C:\Users\HSL\Desktop\WRES_TESTS\Ensemble_tests\scenario103\outputs/</path>
        </destination>
        <destination type="graphic">
            <path>C:\Users\HSL\Desktop\WRES_TESTS\Ensemble_tests\scenario103\outputs/</path>
            <graphical width="800" height="600">
                <plotType>lead threshold</plotType>
            </graphical>
        </destination>
    </outputs>

</project>
