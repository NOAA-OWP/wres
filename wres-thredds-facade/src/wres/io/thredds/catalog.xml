  </service>

<datasetScan name="NWM Short Range" ID="Short_Range"
             path="short_range" location="content/short_range/20170821">

    <sort>
        <lexigraphicByName increasing="true" />
    </sort>

    <metadata inherited="true">
        <serviceName>all</serviceName>
        <dataType>Grid</dataType>
    </metadata>

    <featureCollection name="Feature Collection" featureType="GRID" path="grid/NWM/short_range">
        <collection name="NWM-short_range" spec="content/short_range/20170821/nwm.*\.short_range.terrain_rt.*\.conus.nc$"/>
        <metadata inherited="true">
            <serviceName>collectionService</serviceName>
        </metadata>

    </featureCollection>

</datasetScan>


  <datasetRoot path="test" location="content/testdata/" />

  <dataset name="Test Single Dataset" ID="testDataset"
